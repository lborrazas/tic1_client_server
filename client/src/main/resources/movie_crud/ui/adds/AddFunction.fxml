            </JFXComboBox>
            <JFXComboBox fx:id="cinemaName" focusColor="WHITE" labelFloat="true" onAction="#selectedCinema" prefHeight="35.0" prefWidth="570.0" promptText="Cine" unFocusColor="WHITE">

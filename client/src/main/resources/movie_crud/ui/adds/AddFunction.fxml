               </VBox.margin>
            </JFXComboBox>
            <JFXComboBox fx:id="salaName" focusColor="WHITE" labelFloat="true" onAction="#selectedSala" prefHeight="35.0" prefWidth="570.0" promptText="Sala" unFocusColor="WHITE">
